<resources xmlns:android="urn:oasis:names:tc:xliff:document:1.2" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        a

        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/color_primary_dark
        </item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/color_accent</item>

    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon"
        >
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginLeft">@dimen/size_small_24</item>

    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>


    </style>

    <style name="line_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>


    </style>

    <style name="line_layout.horizontal" parent="line_layout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>

    </style>

    <style name="edit_text.false" parent="edit_text">
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_view.header" parent="text_view">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>

  d  </style>

    <style name="text_view.text" parent="text_view">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="line_vertical">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>
</resources>
