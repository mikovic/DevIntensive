<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context=".ui.activities.MainActivity">



            <LinearLayout
                android:id="@+id/line_layout_0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height_72"
                android:background="@color/grey"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView

                        style="@style/text_view.header"
                        android:layout_marginTop="16dp"
                        android:text="5"
                        android:textSize="@dimen/font_title_medium_20"/>


                    <TextView
                        style="@style/text_view.header"
                        android:gravity="center"
                        android:text="Рейтинг"
                        android:textSize="@dimen/font_body_device_regular_14"/>


                </LinearLayout>


                <TextView
                    style="@style/line_vertical"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        style="@style/text_view.header"
                        android:layout_marginTop="16dp"
                        android:text="5"
                        android:textSize="@dimen/font_title_medium_20"/>


                    <TextView
                        style="@style/text_view.header"
                        android:text="Написано строк кода"
                        android:textSize="@dimen/font_body_device_regular_14"/>


                </LinearLayout>


                <TextView
                    style="@style/line_vertical"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        style="@style/text_view.header"
                        android:layout_marginTop="16dp"
                        android:text="5"
                        android:textSize="@dimen/font_title_medium_20"/>


                    <TextView
                        style="@style/text_view.header"
                        android:gravity="center"
                        android:text="Проектов"
                        android:textSize="@dimen/font_body_device_regular_14"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_layout_1"
                style="@style/line_layout.horizontal"
                android:layout_below="@id/line_layout_0">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_call_black_24dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_large_72"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <EditText
                            style="@style/edit_text.false"
                            android:fontFamily="sans-serif"
                            android:hint="Мобильный телефон"
                            android:inputType="phone"
                            android:text="89166516364"/>

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_phone_in_talk_black_24dp"
                    />

            </LinearLayout>

            <View
                android:id="@+id/line_horizontal_1"
                style="@style/line_horizontal"
                android:layout_below="@id/line_layout_1"></View>


            <LinearLayout
                android:id="@+id/line_layout_2"
                style="@style/line_layout.horizontal"
                android:layout_below="@id/line_horizontal_1">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_mail_outline_black_24dp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_large_72"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <EditText
                            style="@style/edit_text.false"
                            android:fontFamily="sans-serif"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:text="mikovic@yandex.ru"/>

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <ImageView
                    style="@style/icon.right"

                    android:src="@drawable/ic_send_black_24dp"
                    />

            </LinearLayout>

            <View
                android:id="@+id/line_horizontal_2"
                style="@style/line_horizontal"
                android:layout_below="@id/line_layout_2"></View>


            <LinearLayout
                android:id="@+id/line_layout_3"
                style="@style/line_layout.horizontal"
                android:layout_below="@id/line_horizontal_2">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_vk_circle_24"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_large_72"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <EditText
                            style="@style/edit_text.false"
                            android:fontFamily="sans-serif"
                            android:hint="Профиль в VK"
                            android:text="vk/com/mikovic"/>

                    </android.support.design.widget.TextInputLayout>




                </LinearLayout>

                <ImageView
                    style="@style/icon.right"

                    android:src="@drawable/ic_eye_24"
                    />

            </LinearLayout>

            <View
                android:id="@+id/line_horizontal_3"
                style="@style/line_horizontal"
                android:layout_below="@id/line_layout_3"></View>

            <LinearLayout
                android:id="@+id/line_layout_4"
                style="@style/line_layout.horizontal"
                android:layout_below="@id/line_horizontal_3">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_github_circle_24"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_large_72"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <EditText
                            style="@style/edit_text.false"
                            android:fontFamily="sans-serif"
                            android:hint="Репозиторий"
                            android:text="github.com/mikovic/Devintensive"/>

                    </android.support.design.widget.TextInputLayout>

                    <EditText
                        style="@style/edit_text.false"
                        android:fontFamily="sans-serif"
                        android:hint="Мобильный телефон"
                        android:inputType="phone"
                        android:text="89166516364"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <ImageView
                    style="@style/icon.right"

                    android:src="@drawable/ic_eye_24"
                    />

            </LinearLayout>

            <View
                android:id="@+id/line_horizontal_4"
                style="@style/line_horizontal"
                android:layout_below="@id/line_layout_4"></View>
    <LinearLayout
        android:id="@+id/line_layout_5"
        style="@style/line_layout.horizontal"
        android:layout_below="@id/line_horizontal_4">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_account_circle_24"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_large_72"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    style="@style/edit_text.false"
                    android:fontFamily="sans-serif"
                    android:hint="Репозиторий"
                    android:text="github.com/mikovic/Devintensive"/>

            </android.support.design.widget.TextInputLayout>

            <EditText
                style="@style/edit_text.false"
                android:fontFamily="sans-serif"
                android:hint="О себе"
                android:inputType="text"
                android:text="Вообще, не правильно класть Scroll в Scroll...
Но есть ситуации, когда без этого никак...
Я сделал у себя так: Рассчитываю сумму высоты всех элементов внутреннего скролла, и выставляю ему высоту.
Я это конкретно делал с ListView, вложенным в ScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>



</RelativeLayout>
